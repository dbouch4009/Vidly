@model Vidly.ViewModels.CustomerListViewModel

@{
    ViewBag.Title = "Customers List";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>Customers Listed here</p>

<table class="table table-bordered table-hover">

    @for (int i = 0; i < Model.CustomerList.Count; i++)
    {
        <tr>

            <td>@Html.ActionLink("View Customer", "CustomerDetails", new { id = i })</td>
            <td>@Html.ActionLink(Model.CustomerList[i].Id.ToString(), "CustomerDetails", new { id = i })</td>
            <td>@Html.ActionLink(Model.CustomerList[i].Name, "CustomerDetails", new { id = i })</td>
        </tr>;
    }



</table>

